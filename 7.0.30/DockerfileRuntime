COPY container.json /etc/container.json
COPY files /

RUN	chmod a+x /usr/local/bin/* && /build/cleanup.sh

WORKDIR /var/www
# USER vagrant
# ENTRYPOINT ["/usr/local/bin/php-entrypoint"]
CMD ["/usr/sbin/php-fpm", "-x"]
